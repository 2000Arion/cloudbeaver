    },
    {
      "path": "../core-di"
    },
    {
      "path": "../core-localization"
    },
    {
      "path": "../core-resource"
    },
    {
      "path": "../core-root"
    },
    {
      "path": "../core-routing"
    },
    {
      "path": "../core-sdk"
    },
    {
      "path": "../core-settings"
    },
    {
      "path": "../core-storage"
    },
    {
      "path": "../core-utils"
    },
    {
      "path": "../core-view"
    },
    {
      "path": "../plugin-tools-panel"
    },
    {
      "path": "../tests-runner"
    }
  ],
  "include": [
    "__custom_mocks__/**/*",
    "src/**/*",
    "src/**/*.json",
    "src/**/*.css",
    "src/**/*.scss"
  ],
  "exclude": [
    "**/node_modules",
    "lib/**/*",
    "dist/**/*"
  ]
}
