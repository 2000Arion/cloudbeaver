{
  "extends": "@cloudbeaver/tsconfig/tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "composite": true
  },
  "references": [
    {
      "path": "../core-app"
    },
    {
      "path": "../core-authentication"
    },
    {
      "path": "../core-blocks"
    },
    {
      "path": "../core-browser"
